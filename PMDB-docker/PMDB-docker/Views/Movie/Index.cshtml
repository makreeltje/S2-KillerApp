@model MovieListViewModel
@{
    ViewData["Title"] = "All our movies";
}

<div class="input-group mb-3">
    <input type="text" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="basic-addon2">
    <div class="input-group-append">
        <button class="btn btn-outline-primary" type="button">Button</button>
    </div>
</div>

<div class="card-deck justify-content-center">
    @foreach (var movie in Model.Movies)
    {
        <div class="card m-2 border-0 shadow-lg roun" style="min-width: 540px;">
            <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img class="card-img" src="@movie.PosterPath" asp-append-version="true" />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <div class="card-title">
                                <h5>@movie.Title</h5>
                                <span class="small text-muted">@movie.ReleaseDate?.ToString("dd-MM-yyyy")</span>
                            </div>
                            <p class="card-text">@movie.ShortenedPlot</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
<hr />
<nav>
    <ul class="pagination justify-content-center">
        <a class="page-link" href="@Url.Action("Index", new {page = Model.Movies.PageNumber - 1})">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
        @for (int i = 1; i <= Model.Movies.PageCount; i++)
        {
            <li class="@(i == Model.Movies.PageNumber ? "page-item active" : "page-item")">
                <a class="page-link" href="@Url.Action("Index", new {page = i})">@i</a>
            </li>
        }
        <a class="page-link" href="@Url.Action("Index", new {page = Model.Movies.PageNumber + 1})">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </ul>
</nav>
