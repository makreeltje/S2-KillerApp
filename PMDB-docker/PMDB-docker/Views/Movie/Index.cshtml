@model MovieListViewModel
@{
    ViewData["Title"] = "All our movies";
}

<div class="card-deck justify-content-center">
    @foreach (var movie in Model.Movies)
    {
        <div class="card m-2" style="min-width: 540px;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img class="card-img" src="@movie.Image" asp-append-version="true" />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <div class="card-title">
                            <h5>@movie.Title</h5>
                            <span class="small text-muted">@movie.ReleaseDate?.ToString("dd-MM-yyyy")</span>
                        </div>
                        <p class="card-text">@movie.ShortenedPlot</p>
                        <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-light">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>