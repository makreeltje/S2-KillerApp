@{
    ViewData["Title"] = "Movies";
}
@model List<PMDB_docker.Business.Movie>

<section class="bg-light page-section" id="portfolio">

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">Movies</h2>
                <h3 class="section-subheading text-muted">This is a list of all the movies in the database</h3>
            </div>
        </div>
        <div class="row justify-content-center">
            @foreach (var m in @Model)
            {
                <div class="card m-3 portfolio-item shadow mb-5 bg-white border-0 rounded-0" style="width: 538px;margin:0 auto;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            @* TODO: Image source from api TMDB *@
                            <img class="img-thumbnail p-0 border-0 rounded-0" src="https://images-na.ssl-images-amazon.com/images/I/71nsvxFpSTL._SY606_.jpg" alt=""/>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5>@m.Title</h5>
                                <p class="timeline-body">@m.Plot</p>
                                <p class="text-muted"><small>@m.ReleaseDate</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
